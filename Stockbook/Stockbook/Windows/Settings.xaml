        mc:Ignorable="d"
        Title="Settings" Height="300" Width="300">
    <Grid>
        <Button x:Name="RestoreDatabase" Content="Restore Database" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top" Width="113" Click="RestoreDatabaseClick" />
